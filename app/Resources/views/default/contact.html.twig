{% extends 'base.html.twig' %}

{% block body %}
    {% include 'default/header.html.twig' %}
    <div class="container">
        <div class="head-title shop-all-title">{{ 'translate.lepetitfermier'|trans }}</div>
        <div class="contact-text">{{ 'translate.contactus'|trans }}</div>

        <div class="container">
            <div class="row justify-content-center">
                <div class="col-3">
                    <div class="contact-title">{{ 'translate.customerservice'|trans }}</div>
                    <div class="contact-paragraph">
                        {{ 'translate.phone'|trans }}: 55,142,437
                        <br>
                        {{ 'translate.form_email'|trans }}: test@test.com
                    </div>
                </div>
                <div class="col-3">
                    <div class="contact-title">{{ 'translate.contactus'|trans }}</div>
                    <div>{{ 'translate.ordersupport'|trans }}</div>
                </div>
                <div class="col-5 contact-form">
                    {{ form_start(contact_form) }}
                    <div class="row">
                        <div class="col-6">
                            <div>{{ form_widget(contact_form.name, { 'attr': {'placeholder': 'translate.lastname', 'class': 'contact-input' } }) }}</div>
                        </div>
                        <div class="col-6">
                            <div>{{ form_widget(contact_form.email, { 'attr': {'placeholder': 'translate.form_email', 'class': 'contact-input'} }) }}</div>
                        </div>
                    </div>

                    <div>{{ form_widget(contact_form.message, { 'attr': {'placeholder': 'translate.form_message', 'class': 'contact-input'} }) }}</div>
                    <div>{{ form_errors(contact_form) }}</div>

                    <div style="text-align: center;">{{ form_widget(contact_form.save) }}</div>
                    {{ form_rest(contact_form) }}
                    {{ form_end(contact_form) }}
                </div>
            </div>
        </div>
    </div>

    {% include 'default/footer.html.twig' %}
{% endblock %}